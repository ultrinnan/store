# Environment files
.env
.env.local
.env.production

# WordPress core files in src/ (ignore these as they should be installed via composer or downloaded)
src/wp-admin/
src/wp-includes/
src/wp-*.php
# src/wp-config.php - NOW TRACKED (all secrets in ENV)
src/license.txt
src/readme.html
src/xmlrpc.php
src/.htaccess

# Logs
*.log
error_log
access_log

# Database dumps
*.sql
*.sql.gz

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
**/.DS_Store

# IDE files
.vscode/
.idea/
*.swp
*.swo

# Node modules (if any)
node_modules/
npm-debug.log*

# Backup files
*backup*
backup/
uploads_backup_*/

# Docker volumes
db_data/
store_db_data/

# Temporary files
tmp/

.well-known/

# Ignore everything in wp-content by default
src/wp-content/*

# Also unignore mu-plugins
!src/wp-content/mu-plugins/
!src/wp-content/mu-plugins/**

# Optional: also unignore plugins if needed
src/wp-content/plugins/
!src/wp-content/plugins/my-plugin/

# Except the themes folder
!src/wp-content/
!src/wp-content/themes/
!src/wp-content/themes/veldrin/**

# Re-ignore node_modules inside the Veldrin theme (override the un-ignore above)
src/wp-content/themes/veldrin/node_modules/
